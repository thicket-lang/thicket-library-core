module Standard.Function

from Data.Pair import Pair

model Function {
    curry   : [a,b,c] ((a,b) -> c)  -> (a -> b -> c)
    uncurry : [a,b,c] (a -> b -> c) -> ((a,b) -> c)
}

def function : Function = {
    Function 
        /*curry*/   (f a b -> f (a,b))
        /*uncurry*/ (f p -> f p._1 p._2)
}