module Data.Trampoline
 
from Data.Unit import unit

type Trampoline[A] {
    Done { _ : A }
    More { _ : unit -> Trampoline[A] }
}
 
class trampoline[A] this:Trampoline[A] {
    run : A
} {
    def Done.run = this._
    def More.run = trampoline (this._ ()) run
}
